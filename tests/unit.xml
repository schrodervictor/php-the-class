<phpunit colors="true">
    <testsuites>
        <testsuite name="UnitSuite">
            <directory suffix="Test.php">./unit</directory>
        </testsuite>
    </testsuites>
    <php>
        <ini name="date.timezone" value="Europe/Berlin" />
        <ini name="display_errors" value="On" />
        <ini name="display_startup_errors" value="On" />
    </php>
</phpunit>
